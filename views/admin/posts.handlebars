<h2>Posts list: </h2>
<hr>
<a href="/admin/posts/add"><button class="btn btn-success">New post</button> </a>

{{#each posts}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{title}}</h4>
            <p>Description: {{description}}</p>
            <small>Category: {{category.name}}</small><br>
            <small>Date: {{date}}</small><br>
            <a href="/admin/posts/edit/{{_id}}"><button class="btn btn-success mt-3">Edit post</button></a>
            <form action="/admin/posts/delete" method="POST">
                <input type="hidden" name="id" value="{{_id}}">
                <button type="submit" class="btn btn-danger mt-3">Delete post</button>
            </form>         
        </div>
    </div>
{{else}}
    <p>No post registered</p>
{{/each}}