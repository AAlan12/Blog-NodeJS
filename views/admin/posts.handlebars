<h2>Posts list: </h2>
<hr>
<a href="/admin/posts/add"><button class="btn btn-success">New post</button> </a>

{{#each posts}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{title}}</h4>
            <p>Description: {{description}}</p>
            <small>Category: {{category.name}}</small><br>
            <small>Date: {{date}}</small>
            
        </div>
    </div>
{{else}}
    <p>No post registered</p>
{{/each}}